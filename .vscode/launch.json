  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Current File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "cwd": "${fileDirname}",
      "justMyCode": false
    },
    {
      "name": "(gdb) Launch",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bin/main",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/",
      "environment": [
        {
          "name": "DISPLAY",
          "value": ":1"
        }
      ],
      "externalConsole": false,
      "MIMode": "gdb",
      // "miDebuggerPath": "${workspaceFolder}/gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
    },

    {
      "name": "(gdb) test",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/lvgl/tests/build_test_sysheap/test_snapshot",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/",
      "environment": [
        {
          "name": "DISPLAY",
          "value": ":1"
        }
      ],
      "externalConsole": false,
      "MIMode": "gdb",
      // "miDebuggerPath": "${workspaceFolder}/gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
    },
    {
      "name": "attach to MRI",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/nuttx/nuttx", //这里替换为要调试的elf
      "args": [],
      "stopAtEntry": true,
      "cwd": "${workspaceFolder}", // 这里替换为程序的路径
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerServerAddress": "/dev/ttyACM1", // 这里替换为脚本给的gdb端口
      "setupCommands": [
          {
            "description": "gdb set charset",
            "text": "set target-charset ASCII",
            "ignoreFailures": true
          },
          // {
          //   "description": "gdb set remote log file",
          //   "text": "set remotelogfile mri.log",
          //   "ignoreFailures": true
          // },
          // {
          //   "description": "gdb set mem inaccessible-by-default",
          //   "text": "set mem inaccessible-by-default on",
          //   "ignoreFailures": true
          // },
          // {
          //   "description": "gdb set can-use-hw-watchpoints",
          //   "text": "set can-use-hw-watchpoints 4",
          //   "ignoreFailures": true
          // },
          {
              "description": "gdb pretty",
              "text": "-enable-pretty-printing ",
              "ignoreFailures": true
          },
      ],
      "miDebuggerPath": "arm-none-eabi-gdb"  //这里是gdb 程序路径
  }
  ]
}